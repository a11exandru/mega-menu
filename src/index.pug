doctype html
html(lang="en")
    head
        title Solving mega menu challenge
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="description", content="Solving mega menu challenge")
        link(rel="stylesheet", href="style.css")
    body
        ul.mega-menu
            each menu, key in data.menu
                li.menu__link-item
                    a.menu__link(href=`/${menu.id}`)=menu.label
                    .menu__dropdown
                        h2=menu.label
                        ul
                            each menu2 in menu.secondMenuItemList
                                li.menu__drop2
                                    span=menu2.label
                                    .menu__dropdown2
                                        h3.menu__label=menu2.label
                                        .list
                                            ul.list-1
                                                each item in menu2.list1
                                                    li.item__list
                                                        a(href=item.link, class=item.bold?'bold-link':'')=item.label
                                            ul.list-2
                                                each item in menu2.list2
                                                    li.item__list
                                                        a(href=item.link, class=item.bold?'bold-link':'')=item.label
